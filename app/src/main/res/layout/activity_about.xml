<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ECECEA"
    tools:context="me.shreygupta.slash.About">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:id="@+id/title"
        android:src="@drawable/logo_blue"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:id="@+id/divider"
        android:src="@drawable/line_divider"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Use Slash to hangout with friends and minimize data usage for video chats."
        android:id="@+id/overview"
        android:textColor="#000000"
        android:layout_below="@+id/divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Slash is similar to Google Hangout, the key difference being that the video feed appears as a set of ASCII characters. This retains the shapes of the subjects but also significantly reduces the amount of data used."
        android:id="@+id/middle"
        android:textColor="#000000"
        android:layout_below="@+id/overview"
        android:layout_alignLeft="@+id/overview"
        android:layout_alignStart="@+id/overview"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Connect with family and friends in a simple yet efficacious manner."
        android:id="@+id/bottom"
        android:textColor="#000000"
        android:layout_below="@+id/middle"
        android:layout_alignLeft="@+id/middle"
        android:layout_alignStart="@+id/middle"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:textColor="#2DAED6"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bottom"
        android:layout_centerHorizontal="true" />

</RelativeLayout>